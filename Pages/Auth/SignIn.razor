@using Almacen.Data;
@using Almacen.Shared.Partials.General;
@inject NavigationManager NavigationManager
@inject AuthenticationService AuthService
@inject BaseService BaseService
@inject IJSRuntime JS
@inject CustomAuthenticationStateProvider CustomAuthState
@inject NavigationManager NavigationManager
@attribute [AllowAnonymous]

@page "/signin"

<h1 class="text-dark fw-bolder mb-3">
    Sign In
</h1>

<div class="text-gray-500 fw-semibold fs-6">
    Your Social Campaigns
</div>

<div class="row g-3 mb-9">
    <div class="col-md-6">
        <button class="btn btn-flex btn-outline btn-text-gray-700 btn-active-color-primary bg-state-light flex-center text-nowrap w-100">
            Sign in with Google
        </button>
    </div>
    <div class="col-md-6">
        <button class="btn btn-flex btn-outline btn-text-gray-700 btn-active-color-primary bg-state-light flex-center text-nowrap w-100">
            Sign in with Apple
        </button>
    </div>
</div>

<div class="separator separator-content my-14">
    <span class="w-125px text-gray-500 fw-semibold fs-7">Or with email</span>
</div>

<div class="fv-row mb-8">
    <input type="text" placeholder="Email" @bind-value="Email" name="email" autocomplete="off" class="form-control bg-transparent" />
</div>

<div class="fv-row mb-3">
    <input type="password" placeholder="Password" @bind="Password" name="password" autocomplete="off" class="form-control bg-transparent" />
</div>

<div class="d-flex flex-stack flex-wrap gap-3 fs-base fw-semibold mb-8">
    <div></div>
    <a href="/reset-password" class="link-primary">
        Forgot Password ?
    </a>
</div>

<div class="d-grid mb-10">
    <button type="button" class="btn btn-primary" @onclick="Login">
        Sign In
    </button>
</div>

<div class="text-gray-500 text-center fw-semibold fs-6">
    Not a Member yet?
    <a href="/signup" class="link-primary">
        Sign up
    </a>
</div>


@code {
    private string Email { get; set; }
    private string Password { get; set; }

    private async Task Login()
    {
        var result = await CustomAuthState.MarkUserAsAuthenticated(Email, Password);
        if (result)
        {
            NavigationManager.NavigateTo("/", true);


        }
        else
        {
            await BaseService.ShowSweetAlert(AlertType.Error, message: "No confirmado.");
            BaseService.DisposeObjectReference(); // Asegurate de llamar esto después de terminar con el callback
                                                  // Muestra un mensaje de error o maneja el fallo de autenticación como desees.
            
        }
 
    }
}
